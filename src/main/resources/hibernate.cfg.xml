"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
<!-- JDBC Database Connection settings -->

        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/users</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Uditsemwal@2905</property>
        
        
          <!-- Select Sql Dialect -->
        <property name="hibernate.hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        
        <!-- Get all sql queries -->
         <property name="show_sql">true</property>
         <property name="format_sql">false</property>
       
        <!-- JDBC Connection pool settings -->
        <property name="hibernate.connection.pool_size">1</property>
      
   		 <property name="current_session_context_class">thread</property>
   		 
   		  <!-- register Entity class -->
         <mapping class="com.atmecs.onetoonemapping.entity.Users"/>
         <mapping class="com.atmecs.onetoonemapping.entity.UserDetails"/>
</session-factory>
</hibernate-configuration>